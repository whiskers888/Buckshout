{
	"root": true,
	"parserOptions": {
		"ecmaVersion": "latest"
	},
	"env": {
		"browser": true
	},
	"extends": [
		"plugin:vue/vue3-essential",
		"eslint:recommended",
		"@vue/eslint-config-typescript",
		"@vue/eslint-config-prettier/skip-formatting"
	],
	"plugins": ["prettier"],
	"rules": {
		"vue/no-reserved-component-names": "warn",
		"vue/multi-word-component-names": "off",
		"vue/valid-v-slot": [
			"error",
			{
				"allowModifiers": true
			}
		]
	}
}
